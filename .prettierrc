{
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"bracketSameLine": false,
	"jsxSingleQuote": true,
	"printWidth": 120,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": ["client/**/*.{js,jsx,ts,tsx}"],
			"options": {
				"plugins": ["prettier-plugin-tailwindcss"]
			}
		}
	]
}
