{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@content-killer/shared/*": ["../../shared/src/*"],
			"@content-killer/shared": ["../../shared/src"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../shared" }]
}
