{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@shared/*": ["../shared/*"],
			"@server/*": ["../server/src/*"]
		}
	},
	"include": ["src/**/*"],
	"references": [{ "path": "../shared" }, { "path": "../server" }]
}
