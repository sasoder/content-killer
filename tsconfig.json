{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./server/src/*"],
			"@shared/*": ["./shared/*"],
			"@server/*": ["./server/src/*"],
			"@client/*": ["./client/src/*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"composite": true
	},
	"references": [{ "path": "./client" }, { "path": "./server" }, { "path": "./shared" }],
	"files": []
}
