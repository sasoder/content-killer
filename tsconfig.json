{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@content-killer/shared/*": ["./shared/src/*"],
			"@content-killer/shared": ["./shared/src"],
			"@content-killer/server": ["./server/src"]
		}
	},
	"references": [{ "path": "./shared" }, { "path": "./client" }, { "path": "./server" }],
	"files": [],
	"exclude": ["**/node_modules", "**/dist"]
}
